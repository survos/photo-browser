{% extends "base.html.twig"  %}

{% block body %}

    <h3>{{ albums|length }} albums in Album Root {{ albumRoot }}</h3>
    <table class="table dataTables-basic table-condensed">
        <thead>
        <tr>
            <th>Path</th>
            <th>Date</th>
            <th>Collection</th>
            <th>Caption</th>
            <th>Image Count</th>
        </tr>
        </thead>
        <tbody>
        {% for a in albums %}
            {% if a.images.count > 0 %}
            <tr>
                <td>
                        <a href="{{ path('dk_album', {albumId: a.id}) }}">{{ a.relativePath }}</a>
                </td>
                <td>{{ a.date|date("Y-m-d") }}</td>
                <td>{{ a.collection }}</td>
                <td>{{ a.caption }}</td>
                <td>{{ a.images|length }}</td>
                {% if app.request.get('debug') %}
                <td>{{ dump(a) }}</td>
                    {% endif %}
            </tr>
                {% endif %}
        {% endfor %}

        </tbody>
    </table>
{% endblock %}